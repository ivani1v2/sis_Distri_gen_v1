{
  "hosting": [
    {
      "site": "sistema1-distribuciones",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "indexes": "firestore.indexes.json"
  }
}
